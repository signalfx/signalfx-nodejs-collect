{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly",
        "process": true
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "quotes": ["error", "single", {"allowTemplateLiterals": true}],
        "indent": ["error", 2],
        "comma-dangle": ["error", "never"],
        "no-use-before-define": ["error", "nofunc"],
        "keyword-spacing": "error",
        "semi": "error",
        "no-extra-semi": "error"
    }
}